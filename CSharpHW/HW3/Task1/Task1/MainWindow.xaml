<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Task1" Height="350" Width="525">
    <Grid x:Name="layoutGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel ToolTip="Choose Type" x:Name="layoutStackPanelTypes">
            <Label Content="Numeric Types"/>
            <RadioButton x:Name ="rbsbyte" Content="sbyte" IsChecked="True"/>
            <RadioButton Content="byte"/>
            <RadioButton Content="short"/>
            <RadioButton Content="ushort"/>
            <RadioButton Content="int"/>
            <RadioButton Content="uint"/>
            <RadioButton Content="long"/>
            <RadioButton Content="ulong"/>
            <RadioButton Content="float"/>
            <RadioButton Content="double"/>
            <RadioButton Content="decimal"/>
        </StackPanel>
        <StackPanel Grid.Column="1" ToolTip="Choose Value" x:Name="layoutStackPanelValues">
            <Label Content="Value"/>
            <RadioButton Content="MaxValue" IsChecked="True"/>
            <RadioButton Content="MinValue"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Button x:Name="button1" Content="Show"/>
            <Label x:Name="valueType" Height="65" Margin="0,0,0.4,0"/>
        </StackPanel>

    </Grid>
</Window>
