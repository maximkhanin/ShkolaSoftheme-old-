<Window x:Class="HW6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW6"
        mc:Ignorable="d"
        Title="Task1" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Enter the number from 1 to 10"/>
            <TextBox x:Name="textBox" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            
            <Button Content="Check the Answer" Click="Button_Click"/>
            <Label x:Name="counterLabel" Height="50"/>
        </StackPanel>
        
    </Grid>
</Window>
